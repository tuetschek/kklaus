extends layout

block content

  div(class="row").
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1>Diskusní fórum</h1>
        <div id="online" class="pull-right">Backend: <span></span></div>
        <textarea class="form-control" rows="4" placeholder="Napište svou otázku" id="asker">
        Co říkate na slovenské referendum?
        </textarea>
        <div class="text-center">
            <button type="submit" class="btn btn-default" id="ask" >Položit otázku</button>
            <button type="submit" class="btn btn-default" id="clear" >Vyčistit</button>
        </div>
    </div>

  div(class="row").
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <hr />
    </div>

  div(class="row").
    <div class="col-md-4"></div>
    <div class="col-md-4 discussion">

</div>



